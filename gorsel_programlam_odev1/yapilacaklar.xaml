<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gorsel_programlam_odev1.yapilacaklar"
             Title="yapilacaklar"
             BackgroundColor="#1f1f1f">
    <StackLayout>
       
        <Editor x:Name="NoteEditor" HeightRequest="150" Placeholder="Enter your note here" />

        <Picker x:Name="NotePicker" Title="Select a note" />

       
        <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
            <Button Text="Save" TextColor="White" Clicked="OnSaveClicked" Background="gold" />
            <Button Text="Edit" TextColor="White" Clicked="OnEditClicked" Background="gold" />
            <Button Text="Delete" TextColor="White" Clicked="OnDeleteClicked" Background="gold" />
        </StackLayout>
    </StackLayout>
</ContentPage>